<Dropdown_custom>:
    text: ""
    size_hint: 1, None
    id_dropdown: id_dropdown.__self__ # weak_reference err: ref: https://github.com/kivy/kivy/issues/4929
    Label_button:
        id: id_label
        text: root.text
        on_parent:
            id_dropdown.dismiss()
        on_release: id_dropdown.open(self)
        Image_icon:
            #disabled: True
            source: 'icons/BOTTOM.png'
            pos: id_label.right - app.grid_min, id_label.y
    DropDown:
