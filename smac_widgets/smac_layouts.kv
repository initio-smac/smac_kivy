<Widget_slider>:
    size_hint: None, 1
    width: app.grid_min*4
    value_track: True
    value_track_color: get_color_from_hex("#4a8111")
    value_track_width: dp(4)
    background_horizontal: 'icons/TRANSPARENT.png'
    background_disabled_horizontal: 'icons/TRANSPARENT.png'
    cursor_disabled_image: 'icons/TRANSPARENT.png'
    cursor_image: 'icons/CIRCLE.png'
    canvas.before:
        Color:
            rgba: get_color_from_hex("#c0c0c0")
        RoundedRectangle:
            size: self.width-dp(20), dp(8)
            pos: self.x+dp(12), self.center_y-self.height/12
            radius: [ dp(2), ]

<Widget_switch>:
    size_hint: None, 1
    width: dp(60)
    value: 0
    disabled: 0
    opacity: 0.8 if self.disabled else 1
    on_press:
        #print(self.last_touch)
        self.value  = 1-self.value
        #print("self.value", self.value)
    canvas.before:
        Color:
            rgba: self.color_bg
        RoundedRectangle:
            pos: self.x , self.y+dp(15)
            size: self.width, dp(30)
            radius: [ dp(15), ]
    Widget:
        id: id_ball
        size_hint: None, 1
        size: dp(25), dp(25)
        pos: root.x+dp(2.5), root.y+dp(2.5)
        canvas.before:
            Color:
                rgba: root.color_ball
            RoundedRectangle:
                pos: self.x, self.y+(self.height/2)+(self.height/10)
                size: self.size
                radius: [ self.height/2, ]



<Image_icon>:
    size_hint: None, None
    #pos_hint: {'center_x': .5, 'center_y': .5}
    size: app.grid_min, app.grid_min
    #texture_size: app.grid_min, app.grid_min
    #mipmap: True
    canvas.before:
        PushMatrix
        Rotate:
            angle: self.angle
            origin: self.center
    canvas.after:
        PopMatrix

<Widget_block>:
    orientation: 'vertical'
    padding: dp(5)
    size_hint: 1, None
    height: self.minimum_height
    canvas.before:
        Color:
            rgba: self.bg_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [ dp(5), ]
    Label:
        text: root.text
        size_hint: 1, None
        height: app.grid_min
        color: get_color_from_hex("#404040")

<Button_custom1>:
    size_hint: None, None
    size: app.grid_min*4, app.grid_min

<Dropdown_custom>:
    Label_button:
        id: id_label
        text: "<Home/Room>"
        on_release: id_dropdown.open(self)
    DropDown:
        id: id_dropdown
        on_pos: self.dismiss()
        on_select: id_label.text = '{}'.format(args[1])

<BoxLayout_menu>:
    size_hint_x: None
    size_hint_y: None
    height: self.minimum_height
    width: self.parent.width
    pos: 0,0
    #size: self.parent.size
    canvas.before:
        Color:
            rgba: get_color_from_hex("#d9d9d9")
        Rectangle:
            size: self.size
            pos: self.pos

<Label_menuItem>:
    color: get_color_from_hex("#404040")
    size_hint: 1, None
    height: app.grid_min
    canvas.before:
        Color:
            rgba: self.bg_color
        Rectangle:
            size: self.size
            pos: self.pos




